@model IEnumerable<Shop.Models.Category>

@{
    ViewData["Title"] = "Categorylist";
}

<h1>Categorylist</h1>

<p>
    <a asp-action="Category">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>|
                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete2" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
